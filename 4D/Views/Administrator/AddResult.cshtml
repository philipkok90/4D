@model _4D.Models.Results
@{
    ViewBag.Title = "Add Result";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddResult", "Administrator", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            @Html.DropDownListFor(m => m.ResultType, new List<SelectListItem>
                { new SelectListItem{Text="DAMACAI", Value="DAMACAI"},
                   new SelectListItem{Text="DAMACAI 6D", Value="DAMACAI 6D"},
                   new SelectListItem{Text="MAGNUM", Value="MAGNUM"},
                   new SelectListItem{Text="TOTO", Value="TOTO"},
                   new SelectListItem{Text="SINGAPORE 4D", Value="SINGAPORE 4D"},
                   new SelectListItem{Text="CASH SWEEP", Value="CASH SWEEP"},
                   new SelectListItem{Text="SABAH LOTTO 88", Value="SABAH LOTTO 88"},
                   new SelectListItem{Text="SANDAKAN", Value="SANDAKAN"}
                }, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ResultDate, new { placeholder = "dd/mm/yyyy", @Class = "form-control", @type = "date" })

        </div>

        <div class="col-md-4">
            <button class="au-btn au-btn--block au-btn--green m-b-20" id="form_submit" type="submit">Search</button>
        </div>

    </div>
}
