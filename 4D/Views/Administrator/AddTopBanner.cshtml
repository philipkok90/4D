@model _4D.Models.Banner
@{
    ViewBag.Title = "Add Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">Add Banner</div>
            <div class="card-body">

                @using (Html.BeginForm("AddTopBanner", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="cc-payment" class="control-label mb-1">Description</label>
                        @Html.TextBoxFor(m => m.Description, null, new { @class = "form-control", Placeholder = "Description" })
                    </div>
                    <div class="form-group">
                        <label for="cc-payment" class="control-label mb-1">Sequence Arrange</label>
                        @Html.TextBoxFor(m => m.SequenceArrange, null, new { @class = "form-control", Placeholder = "Sequence Arrange", @type = "number" })
                    </div>
                    <div class="form-group">
                        <label for="cc-payment" class="control-label mb-1">URL Path</label>
                        @Html.TextBoxFor(m => m.UrlPath, null, new { @class = "form-control", Placeholder = "URL Path" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                    <button class="au-btn au-btn--block au-btn--green m-b-20" id="form_submit" type="submit">Add</button>
                }

            </div>
        </div>
    </div>
</div>

